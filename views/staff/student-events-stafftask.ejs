      var event = `<%-JSON.stringify(events)%>`;
      function eve({ event_no, event_name, event_date, event_details }) {
        for (let i = 1; i <= event_no; i++) {
          if (!event_name[`E_name_${i}`]) continue;

          document.getElementById(`E_name_${i}`).value = `${
            event_name[`E_name_${i}`]
          }`;
          document.getElementById(`E_date_${i}`).value = `${
            event_date[`E_date_${i}`]
          }`;
          document.getElementById(`E_details_${i}`).value = `${
            event_details[`E_details_${i}`]
          }`;
        }
      }
      eve(JSON.parse(event));
