<script>
        $(document).ready(function () {
        $(".dropdown-menu a.dropdown-toggle").on("click", function (e) {
          if (!$(this).next().hasClass("show")) {
            $(this)
              .parents(".dropdown-menu")
              .first()
              .find(".show")
              .removeClass("show");
          }
          var $subMenu = $(this).next(".dropdown-menu");
          $subMenu.toggleClass("show");

          $(this)
            .parents("li.nav-item.dropdown.show")
            .on("hidden.bs.dropdown", function (e) {
              $(".dropdown-submenu .show").removeClass("show");
            });

          return false;
        });
      });
      window.onload =()=>{
          var xhr;
    if(window.XMLHttpRequest){
      xhr = new XMLHttpRequest();
    }else{
      xhr = new ActiveXObject("Microsoft.XMLHTTP");
    }
    xhr.open("get", "/admin/getcourse", true);
              xhr.setRequestHeader(
                "Content-type",
                "application/x-www-form-urlencoded"
              );
              xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                  const data = JSON.parse(this.responseText);
                   data.map(e=>{
                    var x = document.getElementById("course_title");
                    var option = document.createElement("option");
                    option.text = e.course_title;
                    option.value = e.course_title;
                    x.add(option)
                   })
                 }  
              };
              xhr.send();        
      }
      
    function course_() {
        //    alert(document.getElementById('course_title').value)
        document.getElementById("course_department").innerHTML=null;
           var course =document.getElementById('course_title').value
       var xhr;
    if(window.XMLHttpRequest){
      xhr = new XMLHttpRequest();
    }else{
      xhr = new ActiveXObject("Microsoft.XMLHTTP");
    }
    xhr.open("POST", "/admin/getcourse", true);
              xhr.setRequestHeader(
                "Content-type",
                "application/x-www-form-urlencoded"
              );
              xhr.onreadystatechange = function () {
                if (xhr.readyState == 4 && xhr.status == 200) {
                  const data = JSON.parse(this.responseText);
                   data.map(e=>{
                    var x = document.getElementById("course_department");
                    var option = document.createElement("option");
                    option.text = e.course;
                    option.value = e.course;
                    x.add(option)
                   })
                 }
                  
              };
              xhr.send("course=" + course );
            }
 
     function getQr (){
       let ph_number = document.getElementById('ph_number').value;
       let content_msg = document.getElementById('content_msg').value
      //  if(!ph_number || !content_msg){alert('Enter details');return}
       let container = document.querySelector(".qrcode");
       container.innerHTML = null;
        fetch('/admin/getQr',{
          method:"POST",
          body:JSON.stringify({ph_number,content_msg}),
          headers:{
            "content-type":"application/json; charset=UTF-8"
          }
        })
        .then(res=>res.text()).then(res=>{

                                QrCreator.render({
                                    text: `${res}`,
                                    radius: 0.5, // 0.0 to 0.5
                                    ecLevel: "L", // L, M, Q, H
                                    fill: "rgba(32, 49, 3, 0.992)", // foreground color
                                    background: null, // color or null for transparent
                                    size: 256, // in pixels
                                }, container);
                              })
                              // setTimeout(() => {
                              //   getQr()
                              // }, 30000);
     }
</script>
