        <div class="main-panel">
          <!-- content-wrapper starts -->
          <div class="content-wrapper">
            <div class="row">
              <div class="col-12 grid-margin active">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Promote Students</h4>
                    <form class="form-sample">
                      <p class="card-description">Previous Class & section</p>
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Class</label>
                            <div class="col-sm-9">
                              <select
                                class="form-control"
                                id="course_title"
                                onchange="prev_course()"
                              >
                                <option value=""></option>
                              </select>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label"
                              >Section</label
                            >
                            <div class="col-sm-9">
                              <select
                                class="form-control"
                                id="course_department"
                              >
                                <option value=""></option>
                              </select>
                            </div>
                          </div>
                        </div>
                      </div>
                      <p class="card-description">Next Class & section</p>
                      <div class="row">
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Class</label>
                            <div class="col-sm-9">
                              <select
                                class="form-control"
                                id="course_title_modal"
                                onchange="next_course()"
                              >
                                <option value=""></option>
                              </select>
                            </div>
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group row">
                            <label class="col-sm-3 col-form-label"
                              >Section</label
                            >
                            <div class="col-sm-9">
                              <select
                                class="form-control"
                                id="course_department_modal"
                              >
                                <option value=""></option>
                              </select>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-6">
                          <p id="displaymsg"></p>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group" style="float: right">
                            <button
                              type="button"
                              class="btn btn-outline-primary btn-icon-text"
                              onclick="getStudents()"
                            >
                              <i
                                class="mdi mdi-account-multiple btn-icon-prepend"
                              ></i>
                              Get Students
                            </button>
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Student Details</h4>
                    <!-- <p class="card-description">
                     
                    </p> -->
                    <div class="table-responsive">
                      <table class="table student-table">
                        <thead>
                          <tr>
                            <th scope="col">
                              <div class="form-check form-check-primary">
                                <label class="form-check-label">
                                  <input
                                    type="checkbox"
                                    class="form-check-input"
                                    id="checkAll"
                                    checked="" />

                                  <i class="input-helper"></i
                                ></label>
                              </div>
                            </th>
                            <th scope="col">S.No</th>
                            <th scope="col">Student Name</th>
                            <th scope="col">Previous</th>
                            <th scope="col"></th>
                            <th scope="col">Next</th>
                          </tr>
                        </thead>
                        <tbody id="student-details"></tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- content-wrapper ends -->

          <!-- Modal window  -->

          <div
            class="modal fade"
            id="promoteAllStudentsModal"
            tabindex="-1"
            role="dialog"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-body">
                  <table class="table mt-3">
                    <thead>
                      <tr>
                        <th colspan="2">
                          Press confirm to promote all student
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <tr>
                        <td></td>
                        <td></td>
                      </tr>
                      <tr>
                        <td>
                          <button
                            type="button"
                            class="btn btn-secondary"
                            data-dismiss="modal"
                            style="width: 80%"
                          >
                            Cancel
                          </button>
                        </td>
                        <td>
                          <button
                            type="button"
                            id="promoteAllStudents"
                            class="btn btn-success"
                            style="width: 80%"
                          >
                            Confirm
                          </button>
                        </td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <!-- <div class="modal-footer">
              
             
            </div> -->
              </div>
            </div>
